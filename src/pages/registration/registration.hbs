---
stylessheets:
- ./../scss/index.scss
title: Регистрация
---
{{!< layout}}
<div class="auth">
	<div class="auth__window">
		<h2 class="registartion__label">Регистрация</h2>
		<form class="registration_form">
			<div class="auth__input_field">
				<label class="auth__input_label" for="first_name">Имя</label>
				<input class="auth__input" id="first_name" type="text">
			</div>
			<div class="auth__input_field">
				<label class="auth__input_label" for="second_name">Фамилия</label>
				<input class="auth__input" id="second_name" type="text">
			</div>
			<div class="auth__input_field">
				<label class="auth__input_label" for="login">Логин</label>
				<input class="auth__input" id="login" type="text">
			</div>
			<div class="auth__input_field">
				<label class="auth__input_label" for="email">E-mail</label>
				<input class="auth__input" id="email" type="text">
			</div>
			<div class="auth__input_field">
				<label class="auth__input_label" for="password">Пароль</label>
				<input class="auth__input" id="password" type="password">
			</div>
			<div class="auth__input_field">
				<label class="auth__input_label" for="phone">Номер телефона</label>
				<input class="auth__input" id="phone" type="text">
			</div>
		</form>
		<div class="registration__buttons">
			{{!-- {{> button label="Регистрация"}} --}}
		</div>
	</div>
</div>